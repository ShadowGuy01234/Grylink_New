{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/index.js"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/daily",
            "schedule": "0 0 * * *"
        },
        {
            "path": "/api/cron/sla",
            "schedule": "0 */6 * * *"
        },
        {
            "path": "/api/cron/kyc",
            "schedule": "0 9 * * 1"
        }
    ]
}